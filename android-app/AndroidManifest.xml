<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="11"
	android:versionName="2.0.1" package="org.openintents.plaphoons.sample">
	<uses-sdk android:targetSdkVersion="16" android:minSdkVersion="8"/>

	<uses-feature android:name="android.hardware.touchscreen.pen" android:required="false"/>
	
	<application android:icon="@drawable/icon" android:label="@string/app_name"		
		android:hardwareAccelerated="true" android:theme="@android:style/Theme.Holo.Light"
		android:name="org.openintents.plaphoons.PlaphoonsApplication">
		<activity android:name="org.openintents.plaphoons.ui.MainActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.HOME" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="org.openintents.plaphoons.ui.PreferencesActivity" />		
	</application>
</manifest>