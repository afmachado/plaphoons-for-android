<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.openintents.plaphoons.sample">

	<uses-feature android:name="android.hardware.touchscreen.pen" android:required="false"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	
	<application android:icon="@drawable/icon" android:label="@string/app_name"		
		android:hardwareAccelerated="true" android:theme="@style/Theme.AppCompat.Light"
		android:name="org.openintents.plaphoons.PlaphoonsApplication">
		<activity android:name="org.openintents.plaphoons.ui.MainActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.HOME" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="org.openintents.plaphoons.ui.PreferencesActivity" android:label="@string/app_name_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	</application>
</manifest>
